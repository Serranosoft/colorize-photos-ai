{
    "expo": {
        "name": "Recuerdos a color",
        "slug": "colorize",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/colorize-icon.png",
        "userInterfaceStyle": "light",
        "newArchEnabled": true,
        "splash": {
            "image": "./assets/colorize-splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#ffffff"
        },
        "ios": {
            "supportsTablet": true
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/colorize-icon.png",
                "backgroundColor": "#ffffff"
            },
            "edgeToEdgeEnabled": true,
            "package": "com.paulaymanu113.colorize"
        },
        "web": {
            "favicon": "./assets/favicon.png"
        },
        "extra": {
            "eas": {
                "projectId": "9e6c2034-b2f6-4f58-a490-702eaaee2aa6"
            }
        },
        "plugins": [
            [
                "expo-media-library",
                {
                    "photosPermission": "Permite a Recuerdos a Color acceder a sus fotos",
                    "savePhotosPermission": "Permite a Recuerdos a Color guardar imagenes",
                    "isAccessMediaLocationEnabled": true
                }
            ]
        ]
    }
}